<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
      <td><%= author.name %></td><br>
      <td><%= author.title%></td>
        <td><%= link_to 'View', author %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Delete', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path %>
